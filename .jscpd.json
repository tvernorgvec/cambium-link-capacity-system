{
  "threshold": 3,
  "minTokens": 30,
  "minLines": 5,
  "maxLines": 500,
  "maxSize": "100kb",
  "reporters": ["console", "json", "html"],
  "output": "./reports/jscpd",
  "absolute": true,
  "gitignore": true,
  "blame": false,
  "silent": false,
  "verbose": true,
  "ignore": [
    "**/node_modules/**",
    "**/build/**",
    "**/dist/**",
    "**/preview-dist/**",
    "**/*.min.js",
    "**/reports/**",
    "**/docs/**",
    "**/.husky/**",
    "**/attached_assets/**"
  ],
  "format": ["javascript", "jsx", "typescript", "tsx"],
  "mode": "strict",
  "skipComments": true,
  "languages": ["javascript", "jsx", "typescript"],
  "executors": ["javascript", "jsx"],
  "detectors": [
    {
      "engine": "pmdcpd"
    }
  ]
}
